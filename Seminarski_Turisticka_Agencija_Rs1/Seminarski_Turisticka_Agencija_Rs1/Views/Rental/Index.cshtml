@model Seminarski_Turisticka_Agencija_Rs1.Models.RentalIndexVM

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.js"></script>

<style>
    .container {
        background-color: gray;
        box-shadow: 0px 5px 5px lightgray;
        display: inline-block;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        width: 600px;
        height: 400px;
        margin: auto;
        background-color: #f3f3f3;
    }
</style>

@foreach (var x in Model.rows)
{


    <div class="container">
        <img src="~/images/rent.jpg" style="width:70%; height:200px; position:center; padding-top:5px;" />
        <div class="row text-center">
            <div class="col-md-4">
                <a class="btn-floating blue accent-1">
                    <i class="fas fa-map-marker-alt"></i>
                </a>
                <p>@x.Naziv</p>
                <p>@x.Adresa</p>
                <p class="mb-md-0">Bosna i Hercegovina</p>
            </div>
            <div class="col-md-4">
                <a class="btn-floating blue accent-1">
                    <i class="fas fa-phone"></i>
                </a>
                <p>@x.Telefon</p>
            </div>
            <div class="col-md-4">
                <a class="btn-floating blue accent-1">
                    <i class="fas fa-envelope"></i>
                </a>
                <p>@x.Email</p>
            </div>
        </div>
    </div>
}
