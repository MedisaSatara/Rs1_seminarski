
@model Seminarski_Turisticka_Agencija_Rs1.Data.KorisnickaPodrska
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            width: 100%;
            height: 600px;
        }

        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Raleway", Arial, Helvetica, sans-serif
        }

        .myLink {
            display: none
        }

        img {
            width: 50px;
            height: 50px;
        }

        .main {
            background-image: url(../images/travel.jpg);
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            width: 100%;
            height: 500px;
        }

        .w3-bar {
            width: 100%;
            height: 50px;
        }

        header {
            padding-top: 20%;
            position: absolute;
        }

        .ponuda1 {
            width: 50%;
            float: left;
            padding: 20px;
        }
    </style>
</head>
<body class="w3-light-grey">

    <!-- Navigation Bar -->
    <div class="w3-bar w3-white w3-border-bottom w3-xlarge">
        <img src="~/images/l.png" alt="Turist agency" class="w3-bar-item w3-button w3-text-red w3-hover-red" /><b>Turist agency</b>
        <a href="#" class="w3-bar-item w3-button w3-right w3-hover-red w3-text-grey"><i class="fa fa-search"></i></a>
        <a asp-controller="Login" asp-action="Index" style="right:50%;">Login</a>
    </div>
    <div class="main">
        <header class="w3-display-container w3-content w3-hide-small" style="max-width:1500px">
            <img class="w3-image" src="/w3images/london2.jpg" alt="London" width="1500" height="700">
            <div class="w3-display-middle" style="width:65%">
                <div class="w3-bar w3-black">
                    <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'About');"><i class="fa fa-plane w3-margin-right"></i>O nama</button>
                    <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Ponuda');"><i class="fa fa-bed w3-margin-right"></i>Ponuda</button>
                    <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Rezervacija');"><i class="fa fa-car w3-margin-right"></i>Rezervacija</button>
                    <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Rental');"><i class="fa fa-car w3-margin-right"></i>Rental</button>

                </div>

                <div id="About" class="w3-container w3-white w3-padding-16 myLink">
                    <h3>Let's see with who are you travaling!</h3>
                    <p>Folow us to see our history and interesting!</p>
                    <p><button class="w3-button w3-dark-grey" onclick="location.href='https://localhost:44373/ONama/Index'">About</button></p>
                </div>

                <div id="Ponuda" class="w3-container w3-white w3-padding-16 myLink" style="padding:20px;">
                    <div class="ponuda1">
                        <img src="~/images/buss.jpg" style="width:100%;height:200px; cursor:pointer;" onclick="location.href='https://localhost:44373/Ponuda/IndexBus'" />
                        <p>Travel with bus</p>
                    </div>
                    <div class="ponuda1">
                        <img src="~/images/avion.jpg" style="width:100%;height:200px; cursor:pointer;" onclick="location.href='https://localhost:44373/Ponuda/Index'" />
                        <p>Let's fly</p>
                    </div>
                </div>

                <div id="Rezervacija" class="w3-container w3-white w3-padding-16 myLink">
                    <h3>Rezervisu kartu!</h3>
                    <p><button class="w3-button w3-dark-grey" onclick="location.href='https://localhost:44373/Angular/Index'">Rezervisi!</button></p>
                </div>

                <div id="Rental" class="w3-container w3-white w3-padding-16 myLink">
                    <h3>Rent a car!</h3>
                    <p><button class="w3-button w3-dark-grey" onclick="location.href='https://localhost:44373/Rental/Index'">Kontaktiraj nas!</button></p>
                </div>
            </div>
        </header>

    </div>




    <!-- Footer -->
    <footer class="w3-container w3-center w3-opacity w3-margin-bottom">
        <h5>Find Us On</h5>
        <div class="w3-xlarge w3-padding-16">
            <i class="fa fa-facebook-official w3-hover-opacity"></i>
            <i class="fa fa-instagram w3-hover-opacity"></i>
            <i class="fa fa-snapchat w3-hover-opacity"></i>
            <i class="fa fa-pinterest-p w3-hover-opacity"></i>
            <i class="fa fa-twitter w3-hover-opacity"></i>
            <i class="fa fa-linkedin w3-hover-opacity"></i>
        </div>
        <h5>Ask a question!</h5>
        <button class="w3-button w3-dark-grey" onclick="location.href='https://localhost:44373/KorisnickaPodrska/Index'">Korisnicka podrska</button>
    </footer>



</body>
<script>

    // Tabs
    function openLink(evt, linkName) {
        var i, x, tablinks;
        x = document.getElementsByClassName("myLink");
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablink");
        for (i = 0; i < x.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" w3-red", "");
        }
        document.getElementById(linkName).style.display = "block";
        evt.currentTarget.className += " w3-red";
    }

    // Click on the first tablink on load
    document.getElementsByClassName("tablink")[0].click();
</script>
</html>
